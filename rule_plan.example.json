{
  "schema_version": "1.3",
  "ticker": "AAPL",
  "strategy_type": "swing",
  "rule_language": "expression-v1",
  "indicator_policy": {
    "timeframe": "1D",
    "price_field": "close",
    "use_eod_only": true
  },
  "indicators": [
    { "id": "ma20", "type": "MA", "ma_type": "SMA", "period": 20 },
    { "id": "ema50", "type": "MA", "ma_type": "EMA", "period": 50 },
    { "id": "rsi14", "type": "RSI", "period": 14 },
    { "id": "vwap20", "type": "VWAP", "period": 20 }
  ],
  "position_intent": {
    "max_holding_days": 60,
    "cooldown_days_after_exit": 10
  },
  "position_sizing": {
    "target_pct": 0.10,
    "max_pct": 0.15,
    "account_size": null
  },
  "entry_rules": [
    {
      "id": "E1",
      "label": "Trend + breakout",
      "priority": 1,
      "size_pct": 0.10,
      "condition_expr": "SMA(20)[0] gt EMA(50)[0] AND Close[0] crossover SMA(20)[0]",
      "constraints_expr": [
        "risk.account.daily_loss_limit lte 0.02",
        "risk.ticker.max_position_pct lte 0.10"
      ]
    }
  ],
  "exit_rules": {
    "hard_stop": {
      "type": "pct_below_entry",
      "value": 0.08
    },
    "take_profits": [
      { "id": "TP1", "pct_gain": 0.08, "size_pct": 0.50 },
      { "id": "TP2", "pct_gain": 0.15, "size_pct": 0.50 }
    ],
    "trailing_stop": {
      "type": "pct_from_peak",
      "value": 0.06
    },
    "time_stop": {
      "max_holding_days": 60
    },
    "conditions": [
      {
        "id": "X1",
        "label": "Trend break",
        "condition": { "op": "lt", "left": "ind.ma20", "right": "ind.ema50" }
      }
    ]
  },
  "risk_rules": {
    "account": {
      "max_drawdown": 0.20,
      "daily_loss_limit": 0.05,
      "max_position_value": 0.80
    },
    "strategy": {
      "max_allocation": 0.30,
      "max_concurrent_trades": 5,
      "strategy_max_drawdown": 0.15
    },
    "ticker": {
      "max_position_pct": 0.10,
      "max_loss_per_ticker": 0.03,
      "blacklist": []
    }
  },
  "behavior_controls": {
    "confirmation_delay_sec": 60,
    "require_override_reason": true,
    "daily_action_limit": 2
  },
  "meta": {
    "created_at": "2025-01-11T12:00:00Z",
    "notes": "Long-term swing setup"
  }
}
